<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <GridView
        android:id="@+id/gvLEDs"
        android:layout_width="320dp"
        android:layout_height="326dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:horizontalSpacing="0dp"
        android:listSelector="#00000000"
        android:numColumns="8"
        android:paddingTop="2dp"
        android:verticalSpacing="0dp" >
    </GridView>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Connect To Lumi" />

    <TextView
        android:id="@+id/txtArduino"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gvLEDs"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Console Text" />

    <Button
        android:id="@+id/btnErase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConnect"
        android:layout_alignRight="@+id/btnClear"
        android:layout_toRightOf="@+id/btnColorPicker"
        android:text="Eraser" />

    <Button
        android:id="@+id/btnColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnErase"
        android:layout_alignBottom="@+id/btnErase"
        android:layout_alignParentLeft="true"
        android:text="Choose Color" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btnConnect"
        android:text="Clear Screen" />

    <Button
        android:id="@+id/btnSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnColorPicker"
        android:layout_alignBottom="@+id/btnColorPicker"
        android:layout_alignLeft="@+id/btnConnect"
        android:layout_alignParentRight="true"
        android:text="SMS" />

</RelativeLayout>